<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
  <useStyles filename="nifty-default-styles.xml" />
  <useControls filename="nifty-default-controls.xml" />

  <screen id="start">
    <layer childLayout="center" backgroundColor="#00000088">
      <panel width="50%" height="25%" align="center" valign="center" childLayout="vertical" backgroundColor="#0000FF" padding="10">
          
          <text text="You are in the highscore." font="Interface/Fonts/Default.fnt" width="100%"  />
          <text text="Please enter your name." font="Interface/Fonts/Default.fnt" width="100%"  />
        <control name="textfield" id="text" maxLength="20"  />
      </panel>
    </layer>
  </screen>
</nifty>